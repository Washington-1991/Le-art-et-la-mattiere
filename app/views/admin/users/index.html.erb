<%# HTML correspondietne a la vision de utilizadores por parte del administrador %>

<%= render "shared/navbar" %>

<%= render 'shared/header' %>


<div class="admin-users">
  <div class="admin-users-title">
    <h1>Utilisateurs</h1>
    <%= link_to 'Retour', request.referer || root_path, class: 'btn btn-secondary' %>
  </div>

  <div class="admin-users-table">
    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Created At</th>
          <th>Updated At</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
            <td><%= user.updated_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>



</div>
