<%# HTML correspondiente a Verre %>

<div class="articles-category-container">
  <h1>Articles en Verre</h1>
  <div class="article-list">
    <% @articles.each do |article| %>
      <div class="article-card">
        <%= image_tag article.image_url, alt: article.name %>
        <h2><%= article.name %></h2>
        <p><%= truncate(article.description, length: 100) %></p>
        <p><strong><%= number_to_currency(article.price, unit: "â‚¬") %></strong></p>
        <%= link_to "Voir l'article", article_path(article), class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>
