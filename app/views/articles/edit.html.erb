<h1>Modifier l'Article</h1>

<%= form_with(model: @article, local: true) do |form| %>
  <% if @article.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Nom" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price, "Prix" %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :stock, "Stock" %>
    <%= form.number_field :stock, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category, "Catégorie" %>
    <%= form.text_field :category, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image_url, "URL de l'image" %>
    <%= form.text_field :image_url, class: 'form-control' %>
  </div>

  <%= form.submit 'Mettre à jour l\'article', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Retour à la liste', articles_path, class: 'btn btn-secondary' %>
