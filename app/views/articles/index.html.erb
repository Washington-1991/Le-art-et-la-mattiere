<h1>Liste des Articles</h1>

<%= link_to 'Nouvel Article', new_article_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Prix</th>
      <th>Stock</th>
      <th>Catégorie</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.description %></td>
        <td><%= article.price %></td>
        <td><%= article.stock %></td>
        <td><%= article.category %></td>
        <td>
          <%= link_to 'Voir', article_path(article), class: 'btn btn-info' %>
          <%= link_to 'Éditer', edit_article_path(article), class: 'btn btn-warning' %>
          <%= link_to 'Supprimer', article_path(article), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cet article ?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
