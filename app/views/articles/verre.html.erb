<%# Vista mejorada para la categoría Verre con cartas de presentación de productos %>
<%# Ultima actualizacion 02Jul25 %>

<%# navbar general %>
<%= render "shared/navbar" %>

<%# Header general %>
<%= render 'shared/header' %>

<div class="articles-category-container">
  <%# Main general %>

  <div class="main-card-buttons">
    <%= link_to "Verre", category_articles_path("verre") %>
    <%= link_to '• Carton', category_articles_path('carton') %>
    <%= link_to '• Papier de soie', category_articles_path('papier_de_soie') %>
    <%= link_to '• Papier mâché', category_articles_path('papier_mache') %>
    <%= link_to '• Fils', category_articles_path('fils') %>
  </div>
  <h1>Articles en Verre</h1>

  <div class="article-cards-grid">
    <% @articles.each do |article| %>
      <div class="product-card">
        <div class="product-image">
          <%= image_tag article.image_url, alt: article.name %>
        </div>
        <div class="product-details">
          <h2 class="product-name"><%= article.name %></h2>
          <p class="product-description"><%= truncate(article.description, length: 100) %></p>
          <p class="product-price"><%= number_to_currency(article.price, unit: "€") %></p>
          <%= link_to "Voir l'article", article_path(article), class: "product-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
