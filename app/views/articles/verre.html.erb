<%# Vista mejorada para la categoría Verre con cartas de presentación de productos %>
<%# Última actualización 07Jul25 %>

<%= render "shared/navbar" %>
<%= render "shared/header" %>

<%# Sección de navegación de categorías %>
  <div class="main-card-buttons">
    <%= link_to "Verre", category_articles_path("verre") %>
    <%= link_to '• Carton', category_articles_path('carton') %>
    <%= link_to '• Papier de soie', category_articles_path('papier_de_soie') %>
    <%= link_to '• Papier mâché', category_articles_path('papier_mache') %>
    <%= link_to '• Fils', category_articles_path('fils') %>
  </div>

<div class="creations-card-container">

  <%# Título principal de la categoría %>
  <div class="creation-card-title">
    <h2>Articles en Verre</h2>
  </div>

  <%# Grid de productos %>
  <div class="creation-cards-section">
    <% @articles.each do |article| %>
      <div class="creation-card">

        <%# Imagen del producto %>
        <div class="creation-card-img">
          <%= image_tag article.image_url, alt: article.name %>
        </div>

        <%# Título del producto %>
        <div class="creation-card-title-article">
          <h2><%= article.name %></h2>
        </div>

        <%# Precio del producto %>
        <div class="creation-card-price">
          <p><%= number_to_currency(article.price, unit: "€") %></p>
        </div>

        <%# Botón para ver más %>
        <div class="creation-card-button">
          <%= link_to "Voir l'article", article_path(article), class: "btn" %>
        </div>

        <%# Business cards %>
        <%= render 'shared/business_cards' %>

      </div>
    <% end %>
  </div>
</div>
