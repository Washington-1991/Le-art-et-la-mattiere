<h2>Votre panier</h2>

<% if @cart.cart_items.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Article</th>
        <th>Prix unitaire</th>
        <th>Quantité</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% total = 0 %>
      <% @cart.cart_items.includes(:article).each do |item| %>
        <% subtotal = item.article.price * item.quantity %>
        <% total += subtotal %>
        <tr>
          <td><%= item.article.name %></td>
          <td><%= number_to_currency(item.article.price, unit: "€") %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(subtotal, unit: "€") %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">Total</th>
        <th><%= number_to_currency(total, unit: "€") %></th>
      </tr>
    </tfoot>
  </table>
<% else %>
  <p>Votre panier est 2vide.</p>
<% end %>
