<%# HTML correspondiente al log in(inicio de sesion) %>
<div class="login-container">

  <%= render "shared/navbar" %>

  <%= render 'shared/header' %>

  <div class="login-conexion-container">

    <section class="login-conexion">

      <span class="login-conexion-title">
              <h2>Se conecter</h2>
      </span>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'form-control' } %>
    <%= f.input :password,
                required: true,
                input_html: { autocomplete: "current-password", class: 'form-control' } %>
    <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-check-input' } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

    </section>

  </div>

  <%= render "devise/shared/links" %>

</div>
