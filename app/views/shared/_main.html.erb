<%# app/views/shared/_main.html.erb %>
<%# Última actualización: 25 May 2025 %>

<%# Fuentes externas %>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap" rel="stylesheet">

<main class="main">

  <%# — Sección de botones de filtro por categoría — %>
  <div class="main-card-buttons">
    <% ArticlesController::CATEGORIES.each do |cat| %>
      <% label = cat.tr('_', ' ').split.map(&:capitalize).join(' ') %>
      <%= link_to label,
                  category_articles_path(cat),
                  class: "btn" %>
    <% end %>
  </div>

  <%# — Galería principal — %>
  <div class="main-card-container">
    <div class="main-card-left">
      <%= link_to "#" do %>
        <%= image_tag "https://res.cloudinary.com/dcfmvazgl/image/upload/v1739360012/Art%20et%20Matiere/WhatsApp_Image_2025-02-09_at_15.24.31_1_jo0hcu.jpg",
                      alt: "Detalle artístico principal",
                      class: "main-image" %>
      <% end %>
    </div>

    <div class="main-card-right">
      <div class="main-card-right-top">
        <%= link_to "#" do %>
          <%= image_tag "https://res.cloudinary.com/dcfmvazgl/image/upload/v1739360012/Art%20et%20Matiere/WhatsApp_Image_2025-02-09_at_15.24.31_2_xste6e.jpg",
                        alt: "Detalle artístico superior",
                        class: "side-image" %>
        <% end %>
      </div>

      <div class="main-card-right-bottom">
        <%= link_to "#" do %>
          <%= image_tag "https://res.cloudinary.com/dcfmvazgl/image/upload/v1739360005/Art%20et%20Matiere/WhatsApp_Image_2025-02-09_at_15.22.55_ajaj2u.jpg",
                        alt: "Detalle artístico inferior",
                        class: "side-image" %>
        <% end %>
      </div>
    </div>
  </div>

</main>
